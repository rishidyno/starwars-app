<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"> <!-- Custom background for film item -->

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Title"/>
    </LinearLayout>

    <!-- Episode ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textEpisodeIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episode ID: "/>

        <TextView
            android:id="@+id/textEpisodeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Episode ID Value"/>
    </LinearLayout>

    <!-- Opening Crawl -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textOpeningCrawlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Crawl: "/>

        <TextView
            android:id="@+id/textOpeningCrawl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Crawl Value"/>
    </LinearLayout>

    <!-- Director -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDirectorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director: "/>

        <TextView
            android:id="@+id/textDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director Value"/>
    </LinearLayout>

    <!-- Producer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textProducerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producer: "/>

        <TextView
            android:id="@+id/textProducer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producer Value"/>
    </LinearLayout>

    <!-- Release Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textReleaseDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date: "/>

        <TextView
            android:id="@+id/textReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release Date Value"/>
    </LinearLayout>

</LinearLayout>
